<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desktop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#27252e"
    tools:context="com.saintcactus.android.hope.frames.desktopFrame">

    <Button
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/setting_button" />

    <Button
        android:text="Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_button"
        android:layout_alignStart="@+id/setting_button"
        android:id="@+id/dev_room" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/start_training"
        android:id="@+id/start_training"
        android:background="@drawable/start_training"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/credits"
        android:id="@+id/imageButton3"
        android:background="@drawable/credits"
        android:layout_marginStart="21dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/last_training" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/last_training"
        android:id="@+id/last_training"
        android:background="@drawable/last_training"
        android:layout_marginStart="21dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/history" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/history"
        android:id="@+id/history"
        android:background="@drawable/history"
        android:layout_marginStart="21dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/start_training" />

</RelativeLayout>
